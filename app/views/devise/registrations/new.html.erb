<div class="center">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
        </div><br />

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %><br />
        </div>

        <div class="field">
          <% if @validatable %>
          <%# <em>(<%= @minimum_password_length %1> characters minimum)</em> %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 char. min." %><br />
        </div>

        <div class="field">
          <br /><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
