<div class="center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Hungry?</h1>
      <h3>Vote on a place for lunch.</h3>

      <h2 class="center">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%# <%= f.label :email %1><br /> %>
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %><br />
          </div>

          <div class="field">
            <%# <%= f.label :password %1><br /> %>
            <br /><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in" %>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          </div>
        <% end %>
    </div>
  </div>
</div>
